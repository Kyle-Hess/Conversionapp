<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    tools:context="com.kyle.app.conversionapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="@color/heading_2"
        android:orientation="horizontal"
        android:padding="5sp">

        <TextView
            android:id="@+id/unit_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:text="@string/unit_title"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Button"
            android:elevation="0dp"
            android:text="@string/change_units_Button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Spinner
            android:id="@+id/spinner_from"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/background_light"
            android:entries="@array/length_array"
            android:padding="5dp"
            android:prompt="@string/unit_prompt" />
    </LinearLayout>

    <EditText
        android:id="@+id/input_from"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/textColour"
        android:textSize="30sp"
        tools:text="input 1" />

    <TextView
        android:id="@+id/equals_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/equals_symbol"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Spinner
            android:id="@+id/spinner_to"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/background_light"
            android:entries="@array/length_array"
            android:padding="5dp"
            android:prompt="@string/unit_prompt"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <EditText
        android:id="@+id/input_to"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/textColour"
        android:textSize="30sp"
        tools:text="input 2" />

</LinearLayout>

