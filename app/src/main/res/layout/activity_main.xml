<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kyle.conversionapp.MainActivity"
    android:background="@color/backgound">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Length"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:layout_marginEnd="50sp"
            android:id="@+id/unit_title"
            android:padding="5sp"
            android:textColor="@android:color/background_light" />

        <Button
            android:text="@string/change_units_Button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="@color/Button" />

    </LinearLayout>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/input_from"
            android:layout_marginTop="27dp"
            tools:text="input 1" />

        <Spinner
            android:id="@+id/spinner_from"
            android:layout_width="match_parent"
            android:entries="@array/length_array"
            android:prompt="@string/unit_prompt"
            android:layout_height="50sp" />

        <TextView
            android:text="@string/equals_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/input_to"
            tools:text="input 2" />

        <Spinner
            android:id="@+id/spinner_to"
            android:layout_width="match_parent"
            android:spinnerMode="dropdown"
            android:entries="@array/length_array"
            android:prompt="@string/unit_prompt"
            android:layout_height="50sp" />

    </LinearLayout>

